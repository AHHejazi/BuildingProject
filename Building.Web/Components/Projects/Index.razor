@page "/Project/index"


<h3>@AppResources.ProjectsManagment</h3>

@if (ProjectVM.ProjectList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="ProjectVM">
        <div class="form-row">
            <div class="form-group">
                <NavLink href="/Project/Add" class="btn btn-info btn-block">@AppResources.AddProject</NavLink>
            </div>

            <div class="input-group">
                <div class="form-group col-md-6">
                    <label for="NameAr">@AppResources.NameArabic</label>

                    <InputText @bind-Value="ProjectVM.NameAr" id="NameAr" class="form-control"></InputText>
                </div>
                <div class="form-group col-md-6">
                    <label for="NameEn">@AppResources.NameEnglish</label>

                    <InputText @bind-Value="ProjectVM.NameEn" id="NameEn" class="form-control"></InputText>
                </div>

                <div class="custom-control custom-checkbox">
                    <InputCheckbox @bind-Value="ProjectVM.IsActive" class="custom-control-input" id="customCheck1"></InputCheckbox>
                    <label class="custom-control-label" for="customCheck1">@AppResources.Active</label>
                </div>

            </div>
        </div>
        <button type="submit" class="btn btn-info" @onclick="@SearchProjects">@AppResources.Search</button>
    </EditForm>
    <div class="form-row">
        <table class='table table-striped'>
            <thead>
                <tr>
                    <th>@AppResources.NameArabic</th>
                    <th>@AppResources.NameEnglish</th>
                    <th>@AppResources.CityName</th>
                    <th>@AppResources.ContractorName</th>
                    <th>@AppResources.ConsultingOfficeName</th>
                    <th>@AppResources.Active</th>
                    <th>@AppResources.Options</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var project in ProjectVM.ProjectList)
                {
                    <tr>
                        <td>
                            <NavLink align="center" href="@($"details/{project.Id}")" class="nav-link">
                                @project.NameAr
                            </NavLink>
                        </td>
                        <td align="center">@project.NameEn</td>
                        <td align="center">@project.CityName</td>
                        <td align="center">@project.ContractorName</td>
                        <td align="center">@project.ConsultingOfficeName</td>
                        <td align="center">
                            @if (project.IsActive == true)
                            {
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1" checked disabled>
                                    <label class="custom-control-label" for="customCheck1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1" disabled>
                                    <label class="custom-control-label" for="customCheck1"></label>
                                </div>

                            }
                        </td>

                        <td align="center">
                            <a class="fa fa-edit" title="@AppResources.EditProject" href="@($"edit/{project.Id}")"></a>
                            <a class="fa fa-trash" title="@AppResources.DeleteProject" @onclick="@(async()=>await DeleteProject(project.Id))"></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}

